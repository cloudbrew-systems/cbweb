        <script>
            $(document).ready(function(){
                $('#user_name').selectize({
                    plugins: {
                        'remove_button': {
                            label: ''
                        }
                    },
                    placeholder: 'Select Users',
                    options: [
                        // {id: 1, title: 'LTE', value: 'lte'},
                        // {id: 2, title: 'Quad HD', value: 'quad_hd'},
                        // {id: 3, title: 'Android™ 5.0', value: 'android_5'},
                        // {id: 4, title: '64GB', value: '64gb'}
                    ],
                    render: {
                        option: function(data, escape) {
                            return  '<div class="option">' +
                                '<span>' + escape(data.username) + ' <small>(' + escape(data.email) + ')</small></span>' +
                                '</div>';
                        },
                        item: function(data, escape) {
                            return '<div class="item">' + escape(data.username) + '</div>';
                        }
                    },
                    load: function(query, callback) {
                        if (query.length < 2) return callback();
                        $.ajax({
                            url: '/group/getusers',
                            type: 'POST',
                            dataType: 'json',
                            data: {
                                q: query,
                                page_limit: 10,
                            },
                            error: function() {
                                callback();
                            },
                            success: function(res) {
                                callback(res.users);
                            }
                        });
                    },
                    maxItems: null,
                    valueField: '_id',
                    labelField: 'username',
                    searchField: ['username','email'],
                    create: false,
                    onDropdownOpen: function($dropdown) {
                        $dropdown
                            .hide()
                            .velocity('slideDown', {
                                begin: function() {
                                    $dropdown.css({'margin-top':'0'})
                                },
                                duration: 200,
                                easing: easing_swiftOut
                            })
                    },
                    onDropdownClose: function($dropdown) {
                        $dropdown
                            .show()
                            .velocity('slideUp', {
                                complete: function() {
                                    $dropdown.css({'margin-top':''})
                                },
                                duration: 200,
                                easing: easing_swiftOut
                            })
                    }
                });
            });

            $(function() {
                // enable hires images
                altair_helpers.retina_images();
                // fastClick (touch devices)
                if(Modernizr.touch) {
                    FastClick.attach(document.body);
                }
            });
        </script>

