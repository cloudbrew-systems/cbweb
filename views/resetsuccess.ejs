<body class="login_page">

    <div class="login_page_wrapper">
        <div class="md-card" id="login_card">
            <div class="md-card-content large-padding" id="login_form">
                <div class="login_heading">
                    <a class="navbar-brand" href="/">
                        <h1><img src="/landingpage/images/logo.png" alt="CloudBrew"></h1>
                    </a>
                </div>
                <form id="reset_form">
                    <div class="uk-form-row" id="reset_error_div" style="display:none;">
                        <p id="reset_error" style="color:#990000"></p>
                    </div>
                    <div class="uk-form-row" id="reset_success_div" style="display:none;">
                        <p id="reset_success" style="color:#2e7d32"></p>
                    </div>
                    <input type="hidden" name="token" value="<%= token %>" />
                    <div class="uk-form-row">
                        <label for="reset_password">Password</label>
                        <input class="md-input" type="password" id="reset_password" name="password" />
                    </div>
                    <div class="uk-form-row">
                        <label for="reset_password_repeat">Confirm Password</label>
                        <input class="md-input" type="password" id="reset_password_repeat" name="password_repeat" />
                    </div>
                    <div class="uk-margin-medium-top">
                        <button onclick="formSubmit('/auth/reset','reset_form',$(this),resetcomplete);return false;" class="md-btn md-btn-primary md-btn-block md-btn-large">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- common functions -->
    <script src="/assets/js/common.min.js"></script>
    <!-- altair core functions -->
    <script src="/assets/js/altair_admin_common.min.js"></script>

    <!-- altair login page functions -->
    <script src="/assets/js/pages/login.min.js"></script>

    <!-- custom javascript -->
    <script src="/javascripts/common.js"></script>

</body>
